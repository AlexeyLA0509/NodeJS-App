<div class="app-content">
    <div class="app-content-header">
        <div class="container">
            <span class="app-title">Register</span>
        </div>
    </div>
    <div class="app-content-body">
        <div class="container">
            <div class="app-section">
                <div class="app-section-body">
                    <div class="form-group row">
                        <label id="lErrorText" class="app-error-text" style="display: none"></label>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="tbUserName">User name</label>
                        <div class="col-sm-9">
                            <input id="tbUserName" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="tbEmail">Email</label>
                        <div class="col-sm-9">
                            <input id="tbEmail" class="form-control" type="email" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="tbPassword">Password</label>
                        <div class="col-sm-9">
                            <input id="tbPassword" class="form-control" type="password" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="tbConfirmPassword">Confirm password</label>
                        <div class="col-sm-9">
                            <input id="tbConfirmPassword" class="form-control" type="password" />
                        </div>
                    </div>
                </div>
                <div class="app-section-footer">
                    <button id="btnRegister" class="btn btn-primary" type="button">Register</button>
                </div>
            </div>
        </div>
    </div>
</div>